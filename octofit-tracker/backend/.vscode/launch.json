{
    // Use the Django manage.py runserver command for backend debugging
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Django Backend",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/octofit-tracker/backend/manage.py",
            "args": [
                "runserver", "0.0.0.0:8000"
            ],
            "django": true,
            "justMyCode": true,
            "env": {
                "DJANGO_ALLOW_ASYNC_UNSAFE": "true"
            }
        }
    ]
}
